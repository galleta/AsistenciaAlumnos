<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:columnCount="2"
                android:padding="5dp"
                android:rowCount="6">

                <TextView
                    android:id="@+id/textView1333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_tipo_falta"
                    android:theme="@style/EstiloTexto2" />

                <TextView
                    android:id="@+id/tTipoFaltaAsistencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:theme="@style/EstiloTexto2" />

                <TextView
                    android:id="@+id/textView13466"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="@string/texto_fecha_falta"
                    android:theme="@style/EstiloTexto2" />

                <TextView
                    android:id="@+id/tFechaFaltaAsistencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:theme="@style/EstiloTexto2" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_cantidad_faltas_asistencia"
                    android:theme="@style/EstiloTexto2" />

                <TextView
                    android:id="@+id/tCantidadFaltaAsistencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:theme="@style/EstiloTexto2" />

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutJustificar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto_justificar_faltas_asistencia"
                android:theme="@style/EstiloTexto2"/>

            <ImageButton
                android:id="@+id/bJustificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/thumb_up" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>